#include <iostream>
using namespace std;
int main()
{
    int num;
    int i;
    int count = 0;
    
    cout << "Enter a number: " << endl;
    cin >> num;
    
    if (num == 0)
    {
        cout << "Goodbye" << endl;
        cout << "\n" << endl;
        return 0;
    }
    else if (num == 1)
    {
        cout << "Not Prime Number" << endl;
        cout << "\n" << endl;
        return main();
    }
    else
    {
        for (i = 2; i < num; i++)
            
            if (num % i == 0)
            {
                count++;
            }
    }
    if (count > 1)
    {
        cout << "Not Prime Number" << endl;
        cout << "\n" << endl;
        return main();
    }
    else
    {
        cout << "Prime Number" << endl;
        cout << "\n" << endl;
        return main();
    }
    
    
}
